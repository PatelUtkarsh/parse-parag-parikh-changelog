<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>PHP Code Sniffer configuration</description>

    <!-- Scan the src directory and index.php -->
    <file>src</file>
    <file>index.php</file>

    <!-- Use the PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Show progress -->
    <arg value="p"/>
    <!-- Show sniff codes -->
    <arg value="s"/>
</ruleset>
